<div class="container">

    <div class="row">
        <div class="col">
            <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #09105D !important;">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#" style="color: #FFF;">Sistema de Agendamentos</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link" aria-current="page" href="/" style="color: #FFF;">Cadastrar</a>
                            <a class="nav-link active" href="/consulta" style="color: #FFF; font-weight: bold">Consultar</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col">
            &nbsp;
        </div>
    </div>

    <div class="row">
        <div class="col bg-white">
            <p class="text-start fs-5" style="padding-left: 10px;">Consultar Agendamentos</p>
            <p class="text-start fs-6" style="padding-left: 10px; margin-top: -1em; margin-bottom: 2em;">Verifique a listagem de agendamentos</p>
            <p>
            <div class="container text-center">
                <div class="row bg-primary" style="background-color: #09105D !important;">
                    <div class="col text-light">
                        Nome
                    </div>
                    <div class="col text-light">
                        Endereço
                    </div>
                    <div class="col text-light">
                        Bairro
                    </div>
                    <div class="col text-light">
                        Ações
                    </div>
                </div>

                <div class="row">
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                </div>

                {{#each posts}}
                    {{#dataValues}}
                        <div class="row" style="padding: 5px; display: flex; justify-content: center; align-items: center;">
                            <div class="col">
                                {{nome}}
                            </div>
                            <div class="col">
                                {{endereco}}
                            </div>
                            <div class="col">
                                {{bairro}}
                            </div>
                            <div class="col">
                                <button type="submit" class="btn btn-primary" onclick="window.location.href='/editar/{{id}}';" style="background-color: #0C19AB;">Editar</button>
                                <button type="button" class="btn btn-primary" onclick="window.location.href='/excluir/{{id}}';" style="background-color: #CF001C;">Excluir</button>
                            </div>
                        </div>
                    {{/dataValues}}
                {{/each}}

            </div>
        </div>
    </div> 
</div>